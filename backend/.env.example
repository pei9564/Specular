# 環境變數
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/specular_ai
AUDIT_LOG_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/audit_logs

# 應用設定
APP_NAME=Specular AI
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# CORS 設定
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# LLM 設定
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# vLLM 設定
VLLM_BASE_URL=http://localhost:8000/v1

# Ollama 設定
OLLAMA_BASE_URL=http://localhost:11434

# 日誌設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 安全設定
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 外部認證
TRUST_EXTERNAL_AUTH=True
